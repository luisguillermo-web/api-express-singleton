{
    "openapi": "3.0.0",
    "info": {
      "title": "User API",
      "version": "1.0.0",
      "description": "API REST para consultar usuarios"
    },
    "paths": {
      "/users/{id}": {
        "get": {
          "summary": "Obtener un usuario por su ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "description": "ID del usuario a obtener",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Usuario encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            },
            "404": {
              "description": "Usuario no encontrado"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "example": 1
            },
            "name": {
              "type": "string",
              "example": "Alice"
            }
          }
        }
      }
    }
  }